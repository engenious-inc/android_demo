pipeline {
    agent none
    stages {
        stage('Run Test') {
            parallel {
                stage('Run ktlint') {
                    agent {
                        docker {
                            image 'MarathonLabs/marathon-cloud-cli:1.0.6'
                         }
                     }
                    steps {
                        sh 'yes | $ANDROID_HOME/tools/bin/sdkmanager --licenses && $ANDROID_HOME/tools/bin/sdkmanager --update'
                        sh './gradlew clean ktlint'
                    }
                }
                stage('Run unit tests') {
                    agent {
                        docker {
                            image 'MarathonLabs/marathon-cloud-cli:1.0.6'
                        }
                    }
                    steps {
                        sh 'yes | $ANDROID_HOME/tools/bin/sdkmanager --licenses && $ANDROID_HOME/tools/bin/sdkmanager --update'
                        sh './gradlew clean testDebugUnitTest'
                    }
                }
                stage('Run UI Espresso tests') {
                    agent {
                        docker {
                            image 'MarathonLabs/marathon-cloud-cli:1.0.6'
                        }
                    }
                    steps {
                        sh 'yes | $ANDROID_HOME/tools/bin/sdkmanager --licenses && $ANDROID_HOME/tools/bin/sdkmanager --update'
                        sh './gradlew :app:assembleDebug :app:assembleDebugAndroidTest'
                        sh 'marathon-cloud run android --application app/build/output/apk/debug/app.apk --test-application app/build/output/apk/androidTest/debug/appTest.apk'
                    }
                }
            }
        }
    }
}
